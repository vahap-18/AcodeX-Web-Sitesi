<div class="main-container">
    <div class="widget-sidebar-box-two p-3 mb-4 border rounded shadow-sm">
        <h6 class="text-primary">ABONE OL</h6>
        <form class="needs-validation" method="post" action="/NewsLetter/SubscribeMail/">
            <div class="mb-3">
                <label for="newsletterEmail" class="form-label">Eğitimlerden haberdar olmak için abone olunuz.</label>
                <input type="email" class="form-control" id="newsletterEmail" placeholder="acodex@gmail.com" name="Mail" required>
                <div class="invalid-feedback">
                    Lütfen geçerli bir e-posta adresi girin.
                </div>
            </div>
            <button class="btn btn-primary w-100" id="btn" type="submit">Abone Ol</button>
        </form>
    </div>
</div>

<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("newsletterEmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>
