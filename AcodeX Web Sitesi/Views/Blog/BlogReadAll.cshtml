@model IEnumerable<EntityLayer.Concrate.Blog>
@using EntityLayer.Concrate

@{
    ViewData["Title"] = "BlogReadAll";
    Layout = "_Layout";
}

<div class="main-container">
    @foreach (var item in Model)
    {
        <div class="breatcumb-area d-flex align-items-center bread">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breatcumb-content text-center">
                            <div class="breatcumb-title">
                                <h1>@item.Title</h1>
                            </div> <br />
                            <div class="breatcumb-content-text">
                                <span>@item.Description</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="blog_area blog-details-area rs pt-115 pb-90" id="blog">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-md-12">
                            <div class="dreamit-single-blog-box">
                                <div class="img-container">
                                    <img src="~/tema/assets/images/blog3.jpg" style="max-height: 400px; width: 100%; object-fit: cover; margin-bottom: 50px;" />
                                </div>
                                <div class="gen em-blog-content" style="margin-top: 70px;">
                                    <div class="meta-blog">
                                        <span>@item.CreateDate.ToString("d MMMM yyyy  hh.mm")</span>
                                    </div>
                                    <div class="meta-blog-right"><a href="#">0 Yorum</a></div>
                                    <div class="blog-page-title pt-3">
                                        <p>@item.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 sidebar-right content-widget pdsr">

                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("WriterLastBlog")

                        <div class="widget-sidebar-box-two" style="margin-bottom: 10px; border-bottom:1px groove gray">
                            <div class="widget-sidebar-title text-left pb-20">
                                <h6>KATEGORİLER</h6>
                                <div class="em_bar_bg text-left1"></div>
                            </div>
                            <div class="categories-content">
                                <ul>
                                    <li><a href="blog-details.html">AI Tech</a></li>
                                    <li><a href="blog-details.html">Cloud robotics</a></li>
                                    <li><a href="blog-details.html">Data Science</a></li>
                                    <li><a href="blog-details.html">IOT</a></li>
                                    <li><a href="blog-details.html">Machine Learning</a></li>
                                    <li><a href="blog-details.html">Technology</a></li>
                                </ul>
                            </div> <br />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                @await Html.PartialAsync("../NewsLetter/SubscribeMail")
                </div>
            </div>
            @await Component.InvokeAsync("CommentListByBlog")

            @await Html.PartialAsync("../Comment/PartialAddComment")
        </div>
    }
</div>