@using EntityLayer.Concrate
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "WriterLayout";
    int sıraNo = 1;
}

<link href="~/admin/src/styles/style.css" rel="stylesheet" />
<link href="~/admin/src/styles/style.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Bloglar</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Bloglarım
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <div class="btn-list">
                            <a asp-area="" asp-controller="Blog" asp-action="BlogAdd">
                                <button type="button"
                                        class="btn btn-primary">
                                    Yeni Blog Oluştur
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Bloglarım</h4>
                </div>
                <div class="pb-20">
                    <table class="data-table table nowrap equal-width-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Görsel</th>
                                <th>Blog Başlığı</th>
                                <th>Açıklama</th>
                                <th>İçerik</th>
                                <th>Oluşturma Tarihi</th>
                                <th>Kategori</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="table-plus">@sıraNo</td>
                                    <td>@item.Image</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <p>
                                            @if (!string.IsNullOrEmpty(item.Content) && item.Content.Length > 100)
                                            {
                                                string content = item.Content;
                                                int length = content.Length > 50 ? 50 : content.Length;
                                                int lastIndex = content.Substring(0, length).LastIndexOf(" ");
                                                lastIndex = lastIndex == -1 ? length : lastIndex;
                                                string preview = content.Substring(0, lastIndex);
                                            <p>@preview</p>
                                            }
                                            else
                                            {
                                                @item.Content
                                            }
                                        </p>
                                    </td>
                                    <td>@(((DateTime)item.CreateDate).ToString("dd MMM yyyy"))</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Blog/WriterBlogDetail/@item.BlogId" style="margin:5px"><i class="dw dw-eye"></i></a>
                                        <a href="/Blog/EditBlog/@item.BlogId" style="margin:5px"><i class="dw dw-edit2"></i></a>
                                        <a href="#" onclick="confirmDelete('@item.BlogId')"><i class="icon-copy bi bi-trash3"></i></a>
                                    </td>
                                </tr>
                                sıraNo++;
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(blogId) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = 'DeleteBlog/' + blogId;
            }
        });
    }
</script>
