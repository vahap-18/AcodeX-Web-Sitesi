@*
    Yazar Geri Bildirim sayfası
*@

 @model IEnumerable<EntityLayer.Concrate.Comment>

<section class="w3l-companies-hny-6 position-relative">
    <div class="cusrtomer-layout py-5">
        <div class="container py-md-4 py-3">
            <div class="title-heading-w3 text-center mx-auto">
                <h3 class="title-big">GERİ BİLDİRİMLER</h3>
            </div>
            <div id="owl-demo1" class="owl-carousel owl-theme mt-5">
                <div class="item">

                    @foreach(var item in Model){
                    <div class="testimonial-content">
                        <div class="testimonial">
                            <div class="testi-des">
                                <div class="test-img">
                                    <img src="~/tema/blogtema/assets/images/testi2.jpg" class="img-fluid" alt="UserProfil">
                                </div>
                                <div class="peopl">
                                    <h3>@item.UserName</h3>
                                    <p class="indentity">@item.CreateDate.ToString("dd MMMM YYYY")</p>
                                </div>
                            </div>
                            <blockquote>
                                <p>
                                    @item.Content
                                </p>
                            </blockquote>
                            <quote></quote>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
