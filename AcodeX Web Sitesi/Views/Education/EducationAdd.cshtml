@model EntityLayer.Concrate.Education

@{
    ViewData["Title"] = "EducationAdd";
    Layout = "WriterLayout";
}

@using (Html.BeginForm("EducationAdd", "Education", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="main-container">
        <div class="xs-pd-20-10 pd-ltr-20">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Eğitim Ekleme</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-area="" asp-controller="Education" asp-action="EducationListByWriter">Eğitimler</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Eğitim Ekleme
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <h4 class="text-blue h4"> Eğitim Ekleme</h4>
                    <p class="mb-30">Admin tarafından eğitim ekleme</p>
                </div>
                <div class="wizard-content">
                    <h5>Eğitim Bilgiler</h5><br />
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.EducationId)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Title, "Eğitim Adı")
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description, "Kısa Açıklama")
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContentText, "Eğitim Hakkında")
                                    @Html.TextBoxFor(m => m.ContentText, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ContentText, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.CategoryId, "Kategori")
                                @Html.TextBoxFor(m => m.CategoryId, new { @class = "form-control", placeholder = "Kategori" })
                                @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </section>
                    <br />

                    <h5>Eğitim Dosyaları</h5><br />
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("Görsel Seç")
                                    <div class="custom-file">
                                        @Html.TextBoxFor(m => m.Image, new { type = "file", @class = "custom-file-input" })
                                        <label class="custom-file-label">Görsel Seç</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.VideoUrls, "Eğitim Dosyaları")
                                @Html.TextAreaFor(m => m.VideoUrls, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.VideoUrls, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </section>
                    <br />
                    <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    <a class="btn btn-info btn-block" asp-controller="Education" asp-action="EducationListByWriter">İptal</a>
                </div>
            </div>
        </div>
    </div>
}
