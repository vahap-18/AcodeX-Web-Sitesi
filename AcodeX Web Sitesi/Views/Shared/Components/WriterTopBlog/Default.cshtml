@using EntityLayer.Concrate
@model List<Blog>

@{
    var topBlog = Model.First();
}

<div class="row">
    <div class="col-md-12 mb-15">
        <div class="card-box min-height-200px pd-20 mb-20" data-bgcolor="#808080">
            <div class="d-flex justify-content-between pb-20 text-white">
                <div class="font-24 text-right">
                    <div><i class="icon-copy bi bi-star"></i> En çok okunan blog</div>
                </div>
                <div class="h1 text-center">
                    <img src="~/Admin/src/images/product-img4.jpg" style=" width: 250px; height: 250px; object-fit: cover; border-radius: 50%; margin-top: 20px;  display: block; text-align:left" />
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-end">
                <div class="text-white">
                    <div class="font-24 weight-700">@topBlog.Title</div>
                    <div class="font-12 text-center">@topBlog.Description</div>
                </div>
            </div>
        </div>
    </div>
</div>