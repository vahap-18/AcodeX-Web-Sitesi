@*
    Yönetim panelinde yazarın sahip olduğu blogların kategorilerinin listesi
*@
@using EntityLayer.Concrate;
@model List<Category>;

<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Blog Kategorileri</h4>
    </div>
    <div class="table-responsive">
        <table class="table">

            <thead>
                <tr>
                    <th>Kategory Id</th>
                    <th>Kategory Ad</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Blog</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="table-plus">@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>
                            <div class="progress mb-20">
                                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25"
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>