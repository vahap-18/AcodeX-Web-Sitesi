@using DataAccsess.Concrate
@using EntityLayer.Concrate
@model List<Blog>

<section class="w3l-servicesblock py-md-5 py-4">
    <div class="features-bg pb-lg-5 pt-lg-4 py-4">
        <div class="container">
            <div class="title-main text-center mx-auto mb-md-4">
                <h3 class="title-big">Blog Eğitimler</h3>
                <p class="sub-title mt-2">
                    Blog eğitimler ile öğrenmeye bir adım daha erken başlayın.
                </p>
            </div>
            <div class="row">
                @foreach (var blog in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="~/tema/assets/images/c2.png" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title text-left">@blog.Title</h5>
                                @using (var context = new Context())
                                {
                                    var writer = context.Writers.FirstOrDefault(w => w.WriterId == blog.WriterId);
                                    if (writer != null)
                                    {
                                        <b> @writer.Name @writer.Surname</b>
                                    }
                                    else
                                    {
                                        <p>Yazar bulunamadı</p>
                                    }
                                }
                                <p class="card-text text-left">@blog.Description</p>
                                <p class="card-text">@blog.CreateDate.ToString("dd MMM yyyy")</p>
                                <a href="~/Blog/BlogReadAll/@blog.BlogId" class="btn btn-primary">Detaylar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
