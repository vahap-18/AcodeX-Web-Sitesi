@*
    Yazar bildirim sayfası
*@
@using EntityLayer.Concrate
@model List<Notification>
@{
    ViewData["Title"] = "WriterNotification";
    Layout = "WriterLayout";
    int count = 1;
}

<div class="main-container">
    <div class="pd-20 card-box">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Bildirimler</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Bildirimler
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tür</th>
                    <th>Detay</th>
                    <th>Tarih</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@item.NotificationType</td>
                        <td>@item.NotificationDetails</td>
                        <td>01.06.2024</td>
                        <td>
                            <a href="#" style="margin:5px"><i class="dw dw-eye"></i></a>
                            <a href="#" style="margin:5px"><i class="dw dw-delete-3"></i></a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>


        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
</div>
</div>
