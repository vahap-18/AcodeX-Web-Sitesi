@using AcodeX_Web_Sitesi.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
    int siraNo = 1;
}
<div class="main-container">
   
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Sil>/th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>@siraNo</td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="UserDelete/@item.Id">Sil</a> </td>
                <td><a href="UserUpdate/@item.Id">Düzenle</a> </td>

            </tr>
            siraNo++;
        }
    </table>
    <div class="btn btn-primary text-light btn-block"><a asp-controller="UserAPI" asp-action="UserAdd">Yeni Kullanıcı</a></div>
</div>