@model ResetPasswordViewModel

<div class="main-container">
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group">
            <label for="password">Yeni Parola:</label>
            <input type="password" asp-for="Password" class="form-control" id="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Parola Onayı:</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Parolayı Sıfırla</button>
    </form>
</div>
