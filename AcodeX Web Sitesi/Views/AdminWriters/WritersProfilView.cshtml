@model IEnumerable<EntityLayer.Concrate.Writer>
@using EntityLayer.Concrate

@{
    ViewData["Title"] = "WritersProfilView";
    Layout = "AdminLayout";
}

<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Yazar Profil Görütüleme</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-area="" asp-controller="AdminWriters" asp-action="WriterList">Yazarlar</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Yazar Profil Görütüleme
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="breatcumb-area d-flex align-items-center bread">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="breatcumb-content text-center">
                                <div class="breatcumb-title">
                                    <h1>@item.Name @item.Surname</h1>
                                </div> <br />
                                <div class="breatcumb-content-text">
                                    <span>@item.FieldOfInterest</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="profile-setting">
                <form>
                    <ul class="profile-edit-list row">

                        <li class="weight-500 col-md-6">

                            <img src="@item.Image" alt="Yazar Profil Görseli" style="max-height: 400px; width: 100%; object-fit: cover; margin-bottom: 50px;" />
                            <h4 class="text-blue h5 mb-20">
                                Kişisel Bilgiler
                            </h4>
                            <div class="form-group">
                                <label>Email : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Email"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.PhoneNumber"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Cinsiyet : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@(item.Sex ? "Kadın" : "Erkek")"
                                       readonly />
                            </div>


                            <div class="form-group">
                                <label>Ülke : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Country"
                                       readonly />
                            </div>

                        </li>

                        <li class="weight-500 col-md-6">
                            <h4 class="text-blue h5 mb-20">
                                Sosyal Hesaplar
                            </h4>
                            <div class="form-group">
                                <label>GitHub : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.GitHub"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Instagram : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Instagram"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Facebook : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Facebook"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Website : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Website"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>YouTube : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Youtube"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Tweeter : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@item.Tweeter"
                                       readonly />
                            </div>
                            <div class="form-group">
                                <label>Durum : </label>
                                <input class="form-control form-control-lg"
                                       type="text"
                                       value="@(item.Status ? "Aktif" : "Pasif")"
                                       readonly />
                            </div>

                        </li>
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Bildiğim Teknolojiler : </label>
                                    <input class="form-control form-control-lg"
                                           type="text"
                                           value="@item.KnowTeknologies"
                                           readonly />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Bildiğim Programlama Dilleri : </label>
                                    <input class="form-control form-control-lg"
                                           type="text"
                                           value="@item.ProgrammingLanguages"
                                           readonly />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Adres : </label>
                                    <input class="form-control form-control-lg"
                                           type="text"
                                           value="@item.Adress"
                                           readonly />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Hakkımda : </label>
                                    <input class="form-control form-control-lg"
                                           type="text"
                                           value="@item.About"
                                           readonly />
                                </div>
                            </div>
                        </div>

                    </ul>
                </form>
            </div>
        }
    </div>
</div>


